{
  "name": "yearn-lens",
  "repository": "git@github.com:pmdaly/yearn-lens.git",
  "dependencies": {},
  "devDependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "scripts": {
    "build": "forge build --contracts contracts",
    "clean": "forge clean",
    "test": "forge test",
    "lint": "solhint --config ./.solhint.json 'contracts/**/*.sol' --fix",
    "prettier": "prettier --config ./.prettierrc --write 'contracts/**/*.sol'",
    "prettier:list": "prettier --list-different 'contracts/**/*.sol'",
    "prettier:check": "prettier --check --config ./.prettierrc 'contracts/**/*.sol'"
  }
}
